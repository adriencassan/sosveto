<div class="grid">
  <div class="row">
    <div class="container-form">
      <%= simple_form_for @profile do |f| %>
        <%= f.error_notification %>
        <div class="form-row">
          <%= f.label "Nom", class: "col-xs-2 form-label-xs" %>
          <%= f.input :last_name, label: false, wrapper_html: {class: "col-xs-10"}, input_html: {class: "form-control-xs"} %>
        </div>
        <div class="form-row">
          <%= f.label "Prenom", class: "col-xs-2 form-label-xs" %>
          <%= f.input :first_name, label: false, wrapper_html: {class: "col-xs-10"}, input_html: {class: "form-control-xs"} %>
        </div>


        <div class="form-row">
          <%= f.label "adresse", class: "col-xs-2 form-label-xs" %>
          <%= f.input :adr_street, label: false, wrapper_html: {class: "col-xs-10"}, input_html: {class: "form-control-xs", id: "route"} %>
        </div>
        <div class="form-row">
          <%= f.label "Ville", class: "col-xs-2 form-label-xs" %>
          <%= f.input :adr_zip, label: false, wrapper_html: {class: "col-xs-4"}, input_html: {class: "form-control-xs", id: "postal_code"} %>
          <%= f.input :adr_ville, label: false, wrapper_html: {class: "col-xs-6"}, input_html: {class: "form-control-xs", id: "locality"} %>
        </div>
        <div class="form-row">
          <div class="form-row">
            <%= f.label "adresse", class: "col-xs-2 form-label-xs" %>
            <%= f.input :adr_pays, label: false, wrapper_html: {class: "col-xs-10"}, input_html: {class: "form-control-xs", id: "country"} %>
          </div>
        </div>
        <div class="form-row">
          <%= f.label "Mail", class: "col-xs-2 form-label-xs" %>
          <%= f.input :email, label: false, wrapper_html: {class: "col-xs-10"}, input_html: {class: "form-control-xs"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
